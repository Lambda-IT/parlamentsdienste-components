{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": ["vite/client"],
        "lib": ["dom", "es2020"],
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es2017",
        "skipLibCheck": true
    },
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
}
