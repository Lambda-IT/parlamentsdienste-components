{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "inlineSources": true,
        "types": [],
        "paths": {
            "@parlamentsdienste-components/core/components": ["../asdf"],
            "@parlamentsdienste-components/core/components/*": ["@parlamentsdienste-components/core/*"],
            "@xyz/*": ["../xyz/src/*"]
        }
    },
    "exclude": [
        "src/**/*.spec.ts",
        "src/test-setup.ts",
        "jest.config.ts",
        "src/**/*.test.ts",
        "vite.config.ts",
        "vite.config.mts",
        "vitest.config.ts",
        "vitest.config.mts",
        "src/**/*.test.tsx",
        "src/**/*.spec.tsx",
        "src/**/*.test.js",
        "src/**/*.spec.js",
        "src/**/*.test.jsx",
        "src/**/*.spec.jsx",
        "src/test-setup.ts"
    ],
    "include": ["src/**/*.ts"]
}
